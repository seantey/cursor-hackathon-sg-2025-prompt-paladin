# ============================================
# Prompt Paladin MCP - Configuration Template
# ============================================
# Copy this file to .env and fill in your values

# ----------------
# API Keys
# ----------------
# At least one is required
ANTHROPIC_API_KEY=your_anthropic_key_here
OPENAI_API_KEY=your_openai_key_here
GROQ_API_KEY=your_groq_key_here

# ----------------
# Feature Toggles
# ----------------
# Auto-cast Heal: Automatically fix unclear prompts
# true = auto-heal and allow through
# false = block and show suggestions
AUTO_CAST_HEAL=true

# Anger Translator: Convert frustrated language to constructive
# true = translate "this is broken" to "please help fix this"
# false = only improve clarity
ANGER_TRANSLATOR=true

# Hook timeout in seconds (how long before giving up)
# Recommended: 30.0 for standard models, 15.0 for fast models
HOOK_TIMEOUT_SECS=30.0

# ----------------
# Default Provider & Model
# ----------------
# Which provider to use by default (anthropic, openai, groq)
DEFAULT_PROVIDER=anthropic

# Default model (affects speed and quality)
# Fast models: claude-haiku-4-5, gpt-4o-mini, llama-3.3-70b-versatile
# Quality models: claude-3-5-sonnet-20241022, gpt-4o
# Recommended for hooks: claude-haiku-4-5 (fast, cost-effective)
DEFAULT_MODEL=claude-haiku-4-5

# ----------------
# Per-Tool Overrides (Optional)
# ----------------
# Override provider/model for specific tools
# If not set, uses DEFAULT_PROVIDER and DEFAULT_MODEL

# pp-guard: Evaluates prompt quality (can use fast model)
# PP_GUARD_PROVIDER=anthropic
# PP_GUARD_MODEL=claude-haiku-4-5

# pp-heal: Rewrites prompts for clarity (may need quality model)
# PP_HEAL_PROVIDER=anthropic
# PP_HEAL_MODEL=claude-3-5-sonnet-20241022

# pp-suggestions: Generates alternative prompts
# PP_SUGGESTIONS_PROVIDER=openai
# PP_SUGGESTIONS_MODEL=gpt-4o-mini

# pp-discuss: Opens clarifying dialogue
# PP_DISCUSS_PROVIDER=anthropic
# PP_DISCUSS_MODEL=claude-haiku-4-5

# pp-clarify: Asks clarifying questions
# PP_CLARIFY_PROVIDER=anthropic
# PP_CLARIFY_MODEL=claude-haiku-4-5

# ----------------
# Server Settings
# ----------------
# Server name (shown in Cursor MCP tools list)
MCP_SERVER_NAME=prompt-paladin

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ============================================
# Example Configurations
# ============================================

# Fast setup (< 5 seconds for hooks):
# DEFAULT_PROVIDER=anthropic
# DEFAULT_MODEL=claude-haiku-4-5
# HOOK_TIMEOUT_SECS=15.0

# Quality setup (slower but better):
# DEFAULT_PROVIDER=anthropic
# DEFAULT_MODEL=claude-3-5-sonnet-20241022
# HOOK_TIMEOUT_SECS=60.0

# Balanced setup (recommended for hooks):
# DEFAULT_PROVIDER=anthropic
# DEFAULT_MODEL=claude-haiku-4-5
# PP_HEAL_MODEL=claude-3-5-sonnet-20241022  # Use quality for healing
# HOOK_TIMEOUT_SECS=30.0

# Cost-optimized (OpenAI):
# DEFAULT_PROVIDER=openai
# DEFAULT_MODEL=gpt-4o-mini
# HOOK_TIMEOUT_SECS=15.0

# Speed-optimized (Groq):
# DEFAULT_PROVIDER=groq
# DEFAULT_MODEL=llama-3.3-70b-versatile
# HOOK_TIMEOUT_SECS=10.0
